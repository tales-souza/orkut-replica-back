datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Country {
  id   String @id @default(uuid())
  name String



  Users User[]
  @@map("countries")

}

model User {
  id            String   @id @default(uuid())
  email         String
  password      String
  dt_nascimento DateTime
  name          String
  last_name     String
  sexo          String
  
  country       Country? @relation(fields: [countryId], references: [id])
  countryId     String?

  @@unique([email], name: "sqlite_autoindex_user_email")


  @@map("users")

}
